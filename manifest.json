{
  "manifest_version": 2,

  "name": "百度网盘批量转存工具",
  "description": "百度网盘批量转存工具",
  "version": "1.0",

  "permissions": [
    "tabs"
  ],

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "icons":
  {
    "16": "img/icon.png",
    "48": "img/icon_48x48.png",
    "128": "img/icon_128x128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://pan.baidu.com/*", "http://pan.baidu.com/*"],
      "js": ["js/pan.js"],
      "run_at": "document_idle"
    }
  ]
}
